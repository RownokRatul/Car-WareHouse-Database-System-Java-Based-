                  <Font size="15.0" />
               </font>
            </Button>
            <Button fx:id="loginManufacturerButton" layoutX="190.0" layoutY="186.0" mnemonicParsing="false" onAction="#loginManufacturerOption" prefHeight="46.0" prefWidth="190.0" text="Login as a Manufacturer">
