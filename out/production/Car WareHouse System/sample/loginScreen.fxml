<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.loginScreenController">
   <children>
      <TitledPane animated="false" layoutX="4.0" layoutY="6.0" prefHeight="387.0" prefWidth="591.0" text="Login Screen" textFill="#111010">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="enterUserName" layoutX="230.0" layoutY="99.0" prefHeight="35.0" prefWidth="201.0" />
                  <Label layoutX="135.0" layoutY="102.0" prefHeight="30.0" prefWidth="87.0" text="User Name : ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label layoutX="137.0" layoutY="165.0" prefHeight="35.0" prefWidth="83.0" text="Password :">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="enterPassword" layoutX="230.0" layoutY="165.0" prefHeight="34.0" prefWidth="201.0" />
                  <Label layoutX="137.0" layoutY="28.0" prefHeight="39.0" prefWidth="257.0" text="Provide Your Manufacturer ID : ">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="loginAvatarImage" fitHeight="62.0" fitWidth="72.0" layoutX="32.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true" />
